<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, size: "100x100", fallback: "no_image.jpg" %>
<table class="table">
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <th>introduction</th>
      <td><%= user.introduction %></td>
    </tr>
  </tbody>
</table>
<div class="row">
  <%= link_to "", edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
</div>

<h2>New book</h2>
<%= form_for(book_new) do |f| %>
  <div class="field row">
    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true, autocomplete: "title", class: "col-xs-12" %>
  </div>
  
  <div class="field row">
    <%= f.label :body, "Opinion" %>
    <%= f.text_area :body, autofocus: true, autocomplete: "body", class: "col-xs-12" %>
  </div>

  <div class="field row">
    <%= f.submit "Create Book", class: "btn btn-primary col-xs-12" %>
  </div>
<% end %>