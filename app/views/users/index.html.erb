<div class="row">
  <div class="col-xs-3">
    <%# User info %>
    <%= render 'users/user', user: @user, book_new: @book_new %>
  </div>

  <div class="col-xs-9">
    <h2>Users</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= link_to user_path(user) do %>
                <%= attachment_image_tag user, :profile_image, size: "40x40", fallback: "no_image.jpg" %>
              <% end %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= link_to "Show", user_path(user) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>