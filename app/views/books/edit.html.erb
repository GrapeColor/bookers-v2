<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Editing Book</h1>

    <%= form_for(@book) do |f| %>
    <div class="field row">
      <%= f.label :title %>
      <%= f.text_field :title, autofocus: true, autocomplete: "title", class: "col-xs-12" %>
    </div>
    
    <div class="field row">
      <%= f.label :body, "Opinion" %>
      <%= f.text_area :body, autofocus: true, autocomplete: "body", class: "col-xs-12" %>
    </div>

    <div class="field row">
      <%= f.submit "Update Book", class: "btn btn-primary col-xs-12" %>
    </div>
    <% end %>

    <p>
      <%= link_to "Show", book_path(@book) %>
       | 
      <%= link_to "Back", books_path %>
    </p>
  </div>
</div>
